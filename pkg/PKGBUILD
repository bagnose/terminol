pkgname=terminol-git
_pkgname=terminol
pkgver=20130715.0122ec4
pkgrel=1
pkgdesc='A simple terminal emulator'
arch=(i686 x86_64)
url='https://github.com/bagnose/terminol'
arch=('i686' 'x86_64')
license=('GPL')
depends=('pango' 'fontconfig' 'xcb-util' 'xcb-util-wm' 'libxkbcommon')
makedepends=('git')
source=('git://github.com/bagnose/terminol.git')
provides=("${_pkgname}")
conflicts=("${_pkgname}")
sha1sums=('SKIP')

pkgver() {
    cd "${srcdir}/${_pkgname}"
    git log -1 --format='%cd.%h' --date=short | tr -d -
}

prepare() {
    cd "${srcdir}/${_pkgname}"
}

build() {
    cd "${srcdir}/${_pkgname}"
    ./configure "${srcdir}/build" release gnu
    cd "${srcdir}/build"
    make
}

package() {
    cd "${srcdir}/build"
    make INSTALLDIR="${pkgdir}/usr" install
}
